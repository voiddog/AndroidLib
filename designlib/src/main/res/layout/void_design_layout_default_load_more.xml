<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="@dimen/void_design_default_load_more_height"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/img_icon"
        app:srcCompat="@drawable/void_design_ic_svg_gap_loading_gray_24dp"
        android:layout_marginRight="@dimen/void_design_margin_default_load_more"
        android:layout_width="@dimen/void_design_img_default_load_more_size"
        android:layout_height="@dimen/void_design_img_default_load_more_size" />

    <TextView
        android:id="@+id/txt_content"
        android:gravity="center"
        android:text="@string/void_design_default_load_more_loading"
        android:textColor="@color/void_design_txt_default_load_more"
        android:textSize="@dimen/void_design_txt_default_load_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>